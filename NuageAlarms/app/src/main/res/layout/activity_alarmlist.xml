<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AlarmFiltersActivity">

    <TextView
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:id="@+id/mainTitle" android:textSize="30sp"
            android:textColor="@color/colorText" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent"
    />
    <Spinner
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:id="@+id/entityDropDown"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/mainTitle"/>
    <TextView
            android:layout_width="159dp"
            android:layout_height="53dp"
            android:id="@+id/filterText"
            app:layout_constraintStart_toEndOf="@+id/entityDropDown"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/mainTitle"
            android:textColor="@color/colorCommonText"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="365dp"
            android:layout_height="118dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintTop_toBottomOf="@+id/filterText" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0" android:id="@+id/filterRecView"/>
    <Button
            android:text="@string/button_add"
            android:layout_width="73dp"
            android:layout_height="39dp"
            android:id="@+id/addButton" app:layout_constraintStart_toEndOf="@+id/filterText"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/mainTitle"/>
</android.support.constraint.ConstraintLayout>
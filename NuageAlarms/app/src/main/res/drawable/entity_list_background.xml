<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- we define background color -->
    <solid android:color="@color/colorDropDownItemBackground"/>

    <!-- we define border color and thick -->
    <stroke
            android:width="3dp"
            android:color="@color/colorDropDownItemBackground"/>

    <!-- add some padding for text inside -->
    <padding
            android:bottom="1dp"
            android:left="1dp"
            android:right="1dp"
            android:top="1dp"/>

    <!-- we define corner radius, note that radius can be different for each corner -->
    <corners android:radius="5dp"/>

</shape>